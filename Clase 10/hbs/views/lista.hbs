<h1>Lista de Productos</h1>
        
<a href="/" class="btn btn-primary">Nuevo producto</a>

<hr class="my-4">

<table class="table table-hover table-bordered" id="lstProductos">
  <thead>
      <tr>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Thumbnail</th>
      </tr>
  </thead>
  <tbody>
      {{#unless datos }}
          <tr>
              <td colspan="3">No hay productos</td>
          </tr>
      {{/unless}}
      {{#if datos}}
          {{#each datos}}
              <tr>
                  <td>{{nombre}}</td>
                  <td>{{precio}}</td>
                  <td><img src="{{thumbnail}}" alt='Imagen de {{nombre}}'></td>
              </tr>
          {{/each}}
      {{/if}}
  </tbody>
</table>